{
  "name": "EchoPal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo -p 8080",
    "migrate": "dotenv -e .env.development bun prisma migrate dev",
    "seed": "dotenv -e .env.development bun run prisma/seed.ts",
    "test": "bun run migrate:test && bun run seed:test && dotenv -e .env.test -- bun test",
    "migrate:test": "dotenv -e .env.test -- bun prisma migrate dev",
    "seed:test": "dotenv -e .env.test -- bun run prisma/seed.ts",
    "format": "bun biome check --apply .",
    "e2e": "bun run migrate:test && bun run seed:test && dotenv -e .env.test -- playwright test",
    "e2e:ci": "bun run migrate:test && bun run seed:test && dotenv -e .env.ci -- playwright test",
    "build": "next build",
    "vercel-build": "prisma generate && prisma migrate deploy && bun run seed && next build",
    "start": "next start -p 8080"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.16",
    "@mui/material": "^5.14.17",
    "@prisma/client": "^5.5.2",
    "@types/react": "18.2.39",
    "@types/react-dom": "18.2.17",
    "@vercel/postgres": "^0.5.1",
    "autoprefixer": "10.4.16",
    "next": "^14.0.2",
    "next-pwa": "^5.6.0",
    "postcss": "8.4.31",
    "prisma": "5.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.5",
    "typescript": "5.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.0",
    "@happy-dom/global-registrator": "^12.10.3",
    "@playwright/test": "^1.39.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/testing-library__jest-dom": "^5.14.9",
    "dotenv-cli": "^7.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "ts-jest": "^29.1.1",
    "webpack": "^5.89.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss}": "bun biome check --apply ."
  }
}
