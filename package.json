{
  "name": "phoenicstar",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "build": "next build",
    "vercel-build": "prisma generate && prisma migrate deploy && bun run seed && next build",
    "start": "next start -p 8080",
    "format": "bun biome check --apply app",
    "test": "bun run migrate:test && bun run seed:test && DATABASE_URL=postgresql://postgres:password@localhost:6432/phoenicstar-test?schema=public bun test",
    "e2e": "playwright test",
    "e2e:ci": "CI=true playwright test",
    "seed": "bun run prisma/seed.ts",
    "migrate:test": "DATABASE_URL=postgresql://postgres:password@localhost:6432/phoenicstar-test?schema=public bun prisma migrate dev",
    "seed:test": "DATABASE_URL=postgresql://postgres:password@localhost:6432/phoenicstar-test?schema=public bun run prisma/seed.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.16",
    "@mui/material": "^5.14.17",
    "@prisma/client": "^5.5.2",
    "@types/node": "20.9.1",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@vercel/postgres": "^0.5.1",
    "autoprefixer": "10.4.16",
    "next": "^14.0.2",
    "next-pwa": "^5.6.0",
    "postcss": "8.4.31",
    "prisma": "5.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.5",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "@happy-dom/global-registrator": "^12.10.3",
    "@playwright/test": "^1.39.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/testing-library__jest-dom": "^5.14.9",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "webpack": "^5.89.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss}": "bun biome check --apply ."
  }
}
