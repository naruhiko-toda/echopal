{
  "name": "giftpool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "dev:coverage": "COVERAGE=1 nyc next dev -p 8081",
    "migrate": "bun prisma migrate dev",
    "seed": "bun run src/db/seed.ts",
    "test": "bun run migrate && bun run seed && bun test",
    "lint": "bun biome check --apply .",
    "type": "bun tsc",
    "e2e": "bun run migrate && bun run seed && playwright test",
    "e2e:ci": "bun run migrate && bun run seed && CI=true playwright test",
    "e2e:cov": "bun run migrate && bun run seed && playwright test; nyc report",
    "build": "next build",
    "vercel-build": "bun run migrate && bun run seed && bun run build",
    "start": "next start -p 8080",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@prisma/client": "^5.7.1",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "10.4.16",
    "bun-types": "^1.0.18-1",
    "next": "^14.0.3",
    "next-pwa": "^5.6.0",
    "pino": "^8.16.2",
    "postcss": "8.4.33",
    "postgres": "^3.4.3",
    "prisma": "^5.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.0",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@happy-dom/global-registrator": "^12.10.3",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/testing-library__jest-dom": "^5.14.9",
    "babel-loader": "^9.1.3",
    "babel-plugin-istanbul": "^6.1.1",
    "dotenv-cli": "^7.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nyc": "^15.1.0",
    "playwright-test-coverage": "^1.2.12",
    "ts-jest": "^29.1.1",
    "webpack": "^5.89.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "bun run test"
    }
  }
}
